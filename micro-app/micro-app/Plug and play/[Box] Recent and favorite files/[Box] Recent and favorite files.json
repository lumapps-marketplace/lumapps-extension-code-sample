    "name": "displayfiles",
    "code": "displayfiles",
    "position": {
      "x": 1116,
      "y": 48
    },
    "links": [],
    "type": "adaptive_card",
    "settings": {
      "template": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "size": "Medium",
                    "text": "My Recent Files",
                    "type": "TextBlock",
                    "wrap": true,
                    "weight": "Bolder"
                  },
                  {
                    "text": "[${item.name}](${actions.start.inputVariables.box_url}file/${item.id})",
                    "type": "TextBlock",
                    "wrap": true,
                    "$data": "${actions.getrecentitems.response.body.entries}",
                    "spacing": "Small"
                  }
                ],
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "size": "Medium",
                    "text": "My Favorites",
                    "type": "TextBlock",
                    "wrap": true,
                    "weight": "Bolder"
                  },
                  {
                    "text": "[${name}](${actions.start.inputVariables.box_url}file/${id})",
                    "type": "TextBlock",
                    "wrap": true,
                    "$data": "${actions.getfavorites.response.body.entries}"
                  },
                  {
                    "text": "You currently have no favorite files in Lionbox",
                    "type": "TextBlock",
                    "wrap": true,
                    "$when": "${actions.getfavorites.response.body.total_count == 0}",
                    "horizontalAlignment": "Center"
                  }
                ],
                "width": "stretch"
              }
            ]
          },
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "ActionSet",
                    "actions": [
                      {
                        "url": "${actions.start.inputVariables.box_url}",
                        "type": "Action.OpenUrl",
                        "style": "positive",
                        "title": "More"
                      }
                    ]
                  }
                ],
                "width": "stretch"
              }
            ]
          }
        ],
        "type": "AdaptiveCard",
        "version": "1.6"
      }
    }
  },
