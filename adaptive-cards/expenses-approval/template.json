{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "Container",
            "padding": "Small",
            "items": [
                {
                    "type": "ColumnSet",
                    "id": "fedae9ca-c2d5-5dd2-4a59-176681872822",
                    "columns": [
                        {
                            "type": "Column",
                            "id": "e6d9a897-f9e4-067b-52da-c9900c83e886",
                            "padding": "None",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "id": "0f1bd522-ef75-3f9f-14c4-4ef9e234721f",
                                    "url": "https://avatars.githubusercontent.com/u/2465187?s=280&v=4",
                                    "size": "Small",
                                    "altText": "Lumapps"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "id": "b48b0ab2-4c13-5b59-88eb-2fc97c943d39",
                            "padding": "None",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "id": "2d13ea41-2866-7130-44de-4a18d3093cf7",
                                    "text": "LumApps",
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "id": "05758164-9a44-9484-5ee6-c91f248993d5",
                                    "text": "Be Bold, Do Amazing Things",
                                    "wrap": true,
                                    "spacing": "None",
                                    "color": "Light",
                                    "size": "Small"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ],
                    "padding": "None"
                }
            ],
            "spacing": "None",
            "style": "emphasis"
        },
        {
            "type": "Container",
            "id": "0bdaded9-7b2d-fb8b-c298-ac819fd31288",
            "padding": "Default",
            "spacing": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "50c52578-8e51-1512-aeb1-5a714e8b460b",
                    "text": "${firstName} you have ${count(employeeExpenses)} requests to approve.",
                    "wrap": true,
                    "size": "Large",
                    "weight": "Bolder",
                    "style": "heading"
                }
            ],
            "separator": true
        },
        {
            "type": "Container",
            "id": "47295af6-a6b8-fd4f-f90f-018d01f8e130",
            "padding": "Default",
            "spacing": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "3f5e8bb4-217c-ab02-0c24-097aa57151eb",
                    "text": "Select the requests you want to approve or decline.",
                    "wrap": true,
                    "spacing": "None",
                    "size": "Small"
                },
                {
                    "type": "ColumnSet",
                    "id": "a1e100d4-32eb-23a2-1efe-ee427dabbc61",
                    "$data": "${employeeExpenses}",
                    "columns": [
                        {
                            "type": "Column",
                            "id": "9a761dbd-9793-09ce-eb6e-0009f96713c0",
                            "padding": {
                                "top": "Small",
                                "bottom": "None",
                                "left": "None",
                                "right": "None"
                            },
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Input.Toggle",
                                    "id": "${approvalId}",
                                    "title": " ",
                                    "value": "false",
                                    "wrap": false,
                                    "label": " "
                                }
                            ],
                            "spacing": "None"
                        },
                        {
                            "type": "Column",
                            "id": "5be4e78f-0516-88b9-3c8a-aaa4a363c891",
                            "padding": "None",
                            "width": "auto",
                            "spacing": "None",
                            "items": [
                                {
                                    "type": "Image",
                                    "id": "dbb6d6c-92de-3847-c52c-19b50a2b1e35",
                                    "url": "${userInfo.profilePicture}",
                                    "spacing": "None",
                                    "size": "Small",
                                    "style": "Person"
                                }
                            ]
                        },
                        
                        {
                            "type": "Column",
                            "id": "bc3069ca-e365-0acb-825a-d0088fde0017",
                            "padding": "None",
                            "width": "stretch",
                            "spacing": "Small",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "id": "6a77917-41b7-7959-2d35-bb5f1bfc1a97",
                                    "text": "${userInfo.name}",
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "id": "38552ef-2a05-e130-d308-456843e0e74d",
                                    "text": "${userInfo.jobTitle}",
                                    "wrap": true,
                                    "spacing": "None",
                                    "size": "Small",
                                    "color": "Light"
                                },
                                {
                                    "type": "TextBlock",
                                    "id": "a176e77-f0ac-15dc-377a-ed3f80302fa6",
                                    "text": "${userInfo.city}",
                                    "wrap": true,
                                    "size": "Small",
                                    "color": "Light",
                                    "spacing": "None"
                                },
                                {
                                    "type": "TextBlock",
                                    "id": "9d1870b-42a3-b0d9-85bd-0c1275085158",
                                    "text": "*\"${comment}\"*",
                                    "wrap": true,
                                    "spacing": "Small",
                                    "size": "Small"
                                }
                            ]
                        }
                    ],
                    "padding": "None"
                },
                {
                    "type": "ActionSet",
                    "id": "cabbf18e-fa8c-ff66-e2d9-6626bb1b841e",
                    "actions": [
                        {
                            "type": "Action.Execute",
                            "id": "7e6a701f-815f-2a67-4af1-a316b59c8e83",
                            "title": "Approve Selected",
                            "isPrimary": true,
                            "style": "positive"
                        },
                        {
                            "type": "Action.Execute",
                            "id": "8fc07b67-9628-9ad6-089d-c4ded8be9e23",
                            "title": "Decline Selected"
                        }
                    ]
                }
            ],
            "separator": true
        }
    ],
    "padding": "None",
    "@type": "AdaptiveCard"
}